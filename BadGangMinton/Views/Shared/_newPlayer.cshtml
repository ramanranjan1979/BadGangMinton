@model IEnumerable<BGO.Member.Member>

<div class="table-responsive" style="color:darkred;">
    <table class="table table-striped table-hover table-condensed">
        <tr>
            <th style="text-align: center;">
                @Html.Label("#")
            </th>

            <th style="text-align: center;">
                @Html.Label("Name")
            </th>
            <th style="text-align: center;">
                @Html.Label("DOB")
            </th>
            <th style="text-align: center;">
                @Html.Label("Gender")
            </th>           
            <th style="text-align: center;">
                @Html.Label("DOJ")
            </th>

        </tr>

        @foreach (var item in Model.OrderByDescending(o => o.JoiningDate))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Person.Name)
                </td>

                <td>
                    @Html.Raw(item.Person.DOB.ToShortDateString())
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.Sex)
                </td>              

                <td>                    
                    @Html.Raw(item.JoiningDate.ToShortDateString())
                </td>               
            </tr>
        }

    </table>
</div>

