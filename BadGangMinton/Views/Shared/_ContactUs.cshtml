@model BadGangMinton.View.Model.SupportViewModel

<div class="col-sm-6">
    @using (Html.BeginForm("ConatactUs", "Home", FormMethod.Post, new { ID = "FRM_BGB_JOIN_BG", @class = "form-horizontal", @autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()
        <form id="main-contact-form" name="contact-form" method="post" action="#">
            <div class="row  wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { placeholder = "John", @class = "form-control", maxlength = 20 } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @Style = "color:gold;" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { type = "email", placeholder = "johnsmith@hotmail.com", @class = "form-control", maxlength = 50 } })
                        @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger", @Style = "color:gold;" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { placeholder = "Subject", @class = "form-control", maxlength = 50 } })
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger", @Style = "color:gold;" })
            </div>
            <div class="form-group">
                @Html.TextAreaFor(message => Model.Message, new { @class = "col-lg-12 form-control", @placeholder = "Message up to 250 Characters", @style = "min-width:100%;margin-bottom: 20px;text-align:left;" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn-submit animated infinite pulse">Send Now</button>
            </div>
        </form>
    }
</div>

<script>


    $("#Message").on('keyup keypress blur change', function (e) { NoSpecialCharacters(this) });

    function NoSpecialCharacters(f) {
        !(/^ [A-z&#209;&#241;0-9\n\r,\.\-#~\[\]\{\}\?\(\)\+\=£$€%!\:\']*$/i).test(f.value) ? f.value = f.value.replace(/[^ A-z&#209;&#241;0-9\n\r,\.\-#~\[\]\{\}\?\(\)\+\=£$€%!\:\']/ig, '') : null;
    }

</script>