@model BadGangMinton.View.Model.TxFilterViewModel

<div class="col-sm-4">
    @Html.DropDownListFor(e => Model.PlayerPersonId, Model.Players, "- Select player -", new { @class = "form-control", @style = "border-color: darkred;background-color:white;margin-left:auto;margin-right:auto; " })
</div>

<div class="col-sm-4">
    @Html.DropDownListFor(e => Model.TxTypeId, Model.TxTypes, "- Select Type -", new { @class = "form-control", @style = "border-color: darkred;background-color:white;margin-left:auto;margin-right:auto; " })
</div>

<div class="col-sm-4">
    <span class="glyphicon glyphicon-search" style="cursor:pointer;color:darkred;" onclick="SearchTransactions();"></span>
</div>

<script>

    function SearchTransactions() {


        var ddlPersonId = $('#PlayerPersonId');
        var ddlTxTypeId = $('#TxTypeId');



        var pid = ddlPersonId.val();
        var txtypeId = ddlTxTypeId.val();

        if (pid == '' || txtypeId == '') {

            ddlPersonId.css("border-color", "red");
            ddlTxTypeId.css("border-color", "red");
        }
        else {
            var url = '/Transaction/TransactionList?txTypeId=' + txtypeId + '&personId=' + pid;
            window.location.href = url;
        }
    }

</script>