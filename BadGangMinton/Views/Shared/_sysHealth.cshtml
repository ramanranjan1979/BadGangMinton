@model IEnumerable<BGO.Common.Log>


<div class="content-box-large">
    <div class="panel-body">
        <div class="table-responsive" style="color:darkred;">
            <table class="table table-striped table-hover table-condensed">
                <tr>
                    <th style="text-align: center;">
                        @Html.Label("#")
                    </th>

                    <th style="text-align: center;">
                        @Html.Label("Person")
                    </th>

                    <th style="text-align: center;">
                        <span class="glyphicon glyphicon-info-sign"></span>
                    </th>


                    <th style="text-align: center;">
                        @Html.Label("Datetime")
                    </th>
                </tr>

                @foreach (var item in Model.OrderByDescending(o => o.CreatedOn))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>

                        <td>
                            @{
                                if (item.Person == null)
                                {
                                    @Html.Display("Anonymous")
                                }
                                else
                                {
                                    @Html.DisplayFor(modelItem => item.Person.Name)
                                }
                            }
                            
                        </td>                       

                        <td>
                            <span data-toggle="tooltip" data-placement="top" title="@item.Description">@item.LogType.Name</span>
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                    </tr>
                 }

            </table>
        </div>
    </div>
</div>


<script>
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();
});
</script>