@model BadGangMinton.View.Model.ForgotPassword

@{
    ViewBag.Title = "Forgot Password?";
    Layout = "~/Views/Shared/_LayoutNoMenu.cshtml";
}



<div class="login-bg">
    @using (Html.BeginForm("ResetPassword", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @autocomplete = "off", ID = "FRM_BGB_FORGOTPASSWORD", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <section id="login">
            <div id="login-here" class="parallax">
                <div class="container">
                    <div class="row">
                        <div class="heading text-center col-sm-8 col-sm-offset-2 wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">
                            <h2>Forgot your password?</h2>
                            <h6>We'll email you instructions on how to reset your password.</h6>
                        </div>
                    </div>
                    <div class="contact-form wow fadeIn" data-wow-duration="1000ms" data-wow-delay="600ms">
                        <div class="row">
                            <div class="col-sm-12">
                                <form id="main-contact-form" name="contact-form" method="post" action="#">



                                    <div class="row  wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">

                                        <div class="col-sm-12">
                                            <div class="form-group col-sm-12">
                                                @if (TempData["ERR_Message"] != null)
                                                {
                                                    <h2 style="text-align: center;color: green; font-weight: bold; line-height: 1.5;">@TempData["ERR_Message"]</h2>
                                                }
                                            </div>
                                        </div>


                                        <div class="col-sm-12">
                                            <div class="form-group col-sm-12">
                                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { maxlength = "15", placeholder = "Please enter your username..", @Required = "required", @class = "form-control", @style = "text-align: center;margin-left: auto;margin-right: auto;background-color:#f7ca18;" } })

                                            </div>

                                            <div class="form-group col-sm-12">
                                                @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { maxlength = "50", placeholder = "Please enter your email address", @Required = "required", @class = "form-control", @style = "text-align: center;margin-left: auto;margin-right: auto;background-color:#f7ca18;", @type = "email" } })

                                            </div>

                                            <div class="form-group col-sm-12 text-center">
                                                @Html.ValidationSummary("", new { @class = "text-danger", @Style = "color:gold;" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group col-sm-12">
                                        <input type="submit" id="SubmitBtn" class="btn-submit animated infinite pulse" style="width: 50%;margin-left: auto;margin-right: auto;" value="Send me the instructions.." />
                                    </div>

                                    <div class="form-group col-sm-12" style="text-align:center;">
                                        <p style="margin-top:30px;">
                                            @Html.ActionLink("Back to Login", "Login")
                                        </p>                                        
                                        <p>
                                            @Html.ActionLink("Beta disclaimer", "Disclaimer", "Home")
                                        </p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
</div>

@Html.Action("GetSupport", "Home")



<style>
    div.validation-summary-errors ul li {
        text-align: center;
    }
</style>









@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
